generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/development.db"
}

model User {
  id       Int      @id @default(autoincrement())
  password String
  uuid     String   @unique
  profile  Profile?
  posts    Post[]
}

model Profile {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [user_id], references: [id])
  user_id  Int      @unique
  name     String
  age      Int
  birthday DateTime
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String
  content   String
  author    User   @relation(fields: [author_id], references: [id])
  author_id Int
}
